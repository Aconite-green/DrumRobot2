{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "For DrumRobot",
            "command": "/usr/bin/g++",
            "args": [
                "--std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.o",
                "-o",
                "${workspaceFolder}/src/main.out", // 여기를 수정
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lUSBIO_64",
                "-lm",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}