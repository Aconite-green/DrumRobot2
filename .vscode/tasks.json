{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "For DrumRobot",
            "command": "/usr/bin/g++",
            "args": [
                "--std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.o",
                "-o",
                "${workspaceFolder}/src/${fileBasenameNoExtension}",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "-lUSBIO_64", // <-- Makefile에서 사용한 라이브러리 이름을 여기에 추가
                "-lm",
                "-lpthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}